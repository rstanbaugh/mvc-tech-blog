

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{else}}
  <h6 class="pb-4 has-text-centered is-italic">you do not currently have any posts</h6>
{{/if}}

<script src="/javascript/add-post.js"></script>
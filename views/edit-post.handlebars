<article>
  {{!-- <a href="/dashboard"> &larr; Back to dashboard</a> --}}
  <h2>
    Edit Post
  </h2>
  <div class="card">
    <form class="edit-post-form">
      <div class="form-elements">
        <label for="post-title" style="padding-top: .15em">title</label>
        <input type="text" id="post-title" name="post-title" class="form-title" value="{{post.title}}">
      </div>
      <div class="form-elements">
        <label for="post-content">content</label>
        <textarea rows="10" cols="50" wrap="soft" id="post-content" name="post-content" class="post-content">{{post.post_content}}</textarea>
      </div>
      <div>
        created by you on {{format_date post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
      </div>
      <div>
        <button type="submit" class="edit-post-btn">save post</button>
        <button type="button" class="delete-post-btn edit-post-btn">delete post</button>
        {{!-- <a href="javascript:{}" id="login-button" onclick="deleteFormHandler()" class="login-form-button m-2">delete post</a> --}}
      </div>
    </form>
  </div>
</article>


{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>